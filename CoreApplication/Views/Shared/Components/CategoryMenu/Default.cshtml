@model IEnumerable<Category>

<div class="list-group">
    @foreach (var category in Model)
    {

        <a asp-controller="Home"  asp-action="Index" asp-route-id="@category.ID"  
         class="list-group-item list-group-item-action active @(ViewBag.SecilenKategori== category.ID.ToString()?"active":"")"> @category.Name</a>

    }
</div>